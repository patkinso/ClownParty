{% extends 'ClownClownBundle::layout.html.twig' %}

{% block contentBody %}
    <h1>Clown</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Nosesqueakfrequency</th>
                <td>{{ entity.noseSqueakFrequency }}</td>
            </tr>
            <tr>
                <th>Laughsgenerated</th>
                <td>{{ entity.laughsGenerated }}</td>
            </tr>
            <tr>
                <th>Childreneaten</th>
                <td>{{ entity.childrenEaten }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('clown') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('clown_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock contentBody %}
