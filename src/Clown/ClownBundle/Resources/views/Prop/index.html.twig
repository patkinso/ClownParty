{% extends 'ClownClownBundle::layout.html.twig' %}

{% block contentBody %}
    <h1>Prop list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quality</th>
                <th>Prop Type</th>
                <th>Owner</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('prop_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.quality }}</td>
                <td>{{ entity.propType }}</td>
                <td>{{ entity.clown }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('prop_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('prop_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('prop_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock contentBody %}
