{% extends 'ClownClownBundle::layout.html.twig' %}

{% block contentBody %}
    <h1>Prop</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Quality</th>
                <td>{{ entity.quality }}</td>
            </tr>
            <tr>
                <th>Prop Type</th>
                <td>{{ entity.propType }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('prop') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('prop_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock contentBody %}
